<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/hongden"
    android:layout_height="match_parent"
    tools:context=".PasswordActivity">
    <TextView
        android:id="@+id/textmail"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy nhập địa chỉ email của bạn:"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        />
    <EditText
        android:id="@+id/email_reset"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:padding="8sp"
        android:layout_gravity="center"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="8sp"
        android:hint="Email"
        android:layout_below="@+id/textmail" />
    <Button
        android:id="@+id/btn_reset"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Khôi phục mật khẩu"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/MediumVioletRed"
        android:layout_below="@id/email_reset"
        />
</RelativeLayout>